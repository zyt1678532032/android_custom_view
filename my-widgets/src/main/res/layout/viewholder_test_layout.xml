<?xml version="1.0" encoding="utf-8"?>
<com.zyt.widgets.views.SlidingMenu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="4dp">
        <!-- 主体内容 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/holder_article_horizontal"
            android:background="@color/time_line_current"
            android:paddingVertical="5dp"
            tools:text="dsadasdasdas" />

        <!-- 滑动显示内容 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/time_line_reached"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="5dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:paddingHorizontal="1dp"
                android:paddingTop="2dp"
                android:src="@drawable/icon_collecting" />

            <TextView
                android:id="@+id/menuText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="收藏"
                android:textColor="#fff"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</com.zyt.widgets.views.SlidingMenu>